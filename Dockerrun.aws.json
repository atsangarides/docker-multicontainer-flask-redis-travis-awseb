{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "app",
            "image": "atsangarides/multi-flask-flaskr",
            "hostname": "app",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "atsangarides/multi-flask-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "atsangarides/multi-flask-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["app"],
            "memory": 128
        }
    ]
}

